{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install JDK",
			"detail": "Installs the default JDK into this shell",
			"type": "shell",
			"command": "./jsh.bash --install-jdk",
			"problemMatcher": []
		},
		{
			"label": "eslint",
			"type": "shell",
			"command": "./wf eslint",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "tsc",
			"type": "shell",
			"command": "./wf tsc",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "documentation",
			"detail": "Serves the project documentation and opens a browser to view it",
			"type": "shell",
			"command": "./wf documentation",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "document",
			"detail": "Serves the project documentation and opens a browser to view it, re-rendering the documentation as it changes",
			"type": "shell",
			"command": "./wf document",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}