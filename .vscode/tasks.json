{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Java: Install JDK",
			"detail": "Installs the default JDK into this shell",
			"type": "shell",
			"command": "./jsh.bash --install-jdk",
			"problemMatcher": []
		},
		{
			"label": "Git: Show status",
			"type": "shell",
			"command": "./wf status",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Git: Create branch",
			"detail": "Creates a new branch based on newly-fetched origin/master and checks it out.",
			"type": "shell",
			"command": "./wf git.branch ${input:branchName}",
			"problemMatcher": []
		},
		{
			"label": "Git: Switch to and/or update trunk",
			"type": "shell",
			"command": "./wf git.trunk",
			"problemMatcher": []
		},
		{
			"label": "Git: Prune branches",
			"type": "shell",
			"command": "./wf git.branches.prune",
			"problemMatcher": []
		},
		{
			"label": "ESLint: Run",
			"type": "shell",
			"command": "./wf eslint",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "ESLint: Create categorized report",
			"type": "shell",
			"command": "./jsh.bash contributor/eslint-report.jsh.js",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "TypeScript: Check types",
			"type": "shell",
			"command": "./wf tsc",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Documentation: Show",
			"detail": "Serves the project documentation and opens a browser to view it",
			"type": "shell",
			"command": "./wf documentation",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Project: Update MPL headers",
			"type": "shell",
			"command": "./jsh.bash contributor/code/license.jsh.js --fix",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "branchName",
			"type": "promptString",
			"description": "Name of a branch to create"
		}
	]
}
